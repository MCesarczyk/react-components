{
  "name": "@mcesarczyk/react-components",
  "version": "1.2.0",
  "description": "React components library",
  "author": "Micha≈Ç Cesarczyk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MCesarczyk/react-components"
  },
  "bugs": {
    "url": "https://github.com/MCesarczyk/react-components/issues"
  },
  "homepage": "https://github.com/MCesarczyk/react-components#readme",
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "check:circular": "madge --circular --extensions ts,tsx ./src",
    "format": "npx prettier --write .",
    "test": "vitest",
    "ci:unit": "vitest run",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "eval $(grep '^CHROMATIC_PROJECT_TOKEN' .env.development) && chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.23",
    "@storybook/addon-essentials": "^8.0.1",
    "@storybook/addon-interactions": "^8.0.1",
    "@storybook/addon-links": "^8.0.1",
    "@storybook/addon-onboarding": "^8.0.1",
    "@storybook/blocks": "^8.0.1",
    "@storybook/react": "^8.0.1",
    "@storybook/react-vite": "^8.0.1",
    "@storybook/test": "^8.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.29",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "chromatic": "^11.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "happy-dom": "^14.0.0",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "madge": "^6.1.0",
    "postcss": "^8.4.36",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.13.0",
    "standard-version": "^9.5.0",
    "storybook": "^8.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.2"
  }
}
